["trigger", ".", {
  "name": "build-assets",
  "expression": ["anyof",
    ["dirname", "assets"],
    ["allof",
      ["dirname", "content"],
      ["pcre", ".(jpg|gif|png|svg)$"]
    ]
  ],
  "command": ["make", "build-assets"],
  "append_files": false,
  "stdout": ">>logs/watchman-build.log",
  "stderr": ">>logs/watchman-build.log"
}]